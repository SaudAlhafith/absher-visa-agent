# Application
APP_NAME=Absher Visa AI Agents
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:5000","http://localhost:3000"]

# Node.js Backend Integration
NODE_BACKEND_URL=http://localhost:5000
NODE_BACKEND_TIMEOUT=30

# Database (PostgreSQL with pgvector)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/absher_visa
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis Cache
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=86400
SCRAPE_CACHE_TTL_DAYS=7

# LLM Configuration
# Options: ollama, openai, anthropic
LLM_PROVIDER=ollama

# Ollama (Local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# OpenAI (Optional - for cloud LLM)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Anthropic (Optional - for Claude)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-haiku-20240307

# LLM Parameters
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=4096

# Embeddings
# Options: bge-m3, openai
EMBEDDING_PROVIDER=bge-m3
EMBEDDING_MODEL=BAAI/bge-m3
EMBEDDING_DIMENSION=1024

# OCR Configuration
OCR_LANG=ar,en
OCR_USE_GPU=false

# Storage
# Options: s3, local
STORAGE_PROVIDER=local
STORAGE_LOCAL_PATH=./uploads

# S3/MinIO (Optional)
S3_BUCKET=
S3_ENDPOINT=
S3_ACCESS_KEY=
S3_SECRET_KEY=

# Scraping
SCRAPER_USER_AGENT=AbsherVisaBot/1.0
SCRAPER_TIMEOUT=30
SCRAPER_MAX_RETRIES=3
